<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffe3ad">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создание комнаты"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Админ"
            android:textSize="25dp"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/ed_admin_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:hint="Твой ник"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройка комнаты"
            android:textSize="25dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/ed_id_lobbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите id комнаты"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <CheckBox
            android:id="@+id/count_us_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ограниченное кол-во участников"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/ed_count_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите количество мест в комнате"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:visibility="invisible"/>

        <CheckBox
            android:id="@+id/isClose_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Закрытая комната"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/ed_lobbi_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите пароль комнаты"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/butt_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:onClick="onCreateLobbi"
            android:text="Создать" />

        <Button
            android:id="@+id/butt_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:onClick="backToMainWin"
            android:text="Отмена" />



    </LinearLayout>


</LinearLayout>